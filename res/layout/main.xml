<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <View
        android:layout_width="330dp"
        android:layout_height="325dp"
        android:layout_centerInParent="true"
        android:background="@drawable/chessboard" />

    <elong.CrazyLink.CrazyLinkGLSurfaceView
        android:id="@+id/game"
        android:layout_width="318dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="162dp"
        android:layout_height="135dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/scoreboard"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="30dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <yawnlon.android.widget.YTtfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textSize="15sp" />

            <yawnlon.android.widget.YTtfTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <yawnlon.android.widget.YTtfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: "
                android:textSize="15sp" />

            <yawnlon.android.widget.YTtfTextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <yawnlon.android.widget.YTtfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TargetScore: "
                android:textSize="15sp" />

            <yawnlon.android.widget.YTtfTextView
                android:id="@+id/target_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.yawnlon.kitchenkongfu.view.ToolView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:type="0" />

        <com.yawnlon.kitchenkongfu.view.ToolView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:type="1" />

        <com.yawnlon.kitchenkongfu.view.ToolView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:type="2" />
    </LinearLayout>

</RelativeLayout>